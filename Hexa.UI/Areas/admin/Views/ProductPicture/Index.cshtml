@model IOrderedQueryable<ProductPicture>
<div class="right_col" role="main">
    <div class="">


        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Fotoğraflar</h2>
                        <a asp-controller="ProductPicture" asp-action="New" asp-route-productid="@ViewBag.productid" class="btn btn-success float-right" style="color:#fff">Fotoğraf ekle</a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Resim</th>
                                                <th>Sıra Numarası</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (ProductPicture p in Model)
                                            {
                                                <tr>
                                                    <td><a asp-controller="ProductPicture" asp-action="Edit" asp-route-id="@p.ID">@p.Name</a></td>
                                                    <td>@p.DisplayIndex</td>
                                                    <td>
                                                        <a asp-controller="ProductPicture" asp-action="Delete" asp-route-id="@p.ID" class="btn btn-danger" style="color:#fff">Sil</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>